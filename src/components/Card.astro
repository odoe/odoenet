---
export interface Props {
    post: Record<string, any>;
}

const { post } = Astro.props as Props;

const coverImage = post.frontmatter.coverImage
    ? `/assets${post.url}/images/${post.frontmatter.coverImage}`
    : `/../../assets/images/odoenet.jpg`;
---

<section class="root">
    <a href={post.url} aria-label={post.frontmatter.description}>
        <div class="content">
            <picture>
                <source
                    type="image/webp"
                    srcset={coverImage.replace(/\.(jpg|png)/, ".webp")}
                />
                <source type="image/jpeg" srcset={coverImage} />
                <img
                    alt={post.frontmatter.description}
                    loading="lazy"
                    class="image"
                    src={coverImage}
                />
            </picture>

            <span class="banner">{post.frontmatter.title}</span>
        </div>
    </a>
    <small>
        <time datetime={post.frontmatter.pubDate}>
            {
                new Date(post.frontmatter.pubDate).toLocaleDateString("en-us", {
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                })
            }
        </time>
    </small>
</section>

<style>
    @import "../styles/variables.css";

    .root {
        display: flex;
        flex-direction: column;
        padding: 1rem;
        margin: 1rem;
        background: var(--card-bg-color);
        align-items: center;
    }

    .link {
        color: var(--link-color);
    }

    .link:visited {
        color: var(--link-color);
    }

    .image {
        /* max-height: 175px; */
        max-width: 420px;
        object-fit: contain;
        display: block;
        margin: 0 auto;
    }

    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .banner {
        color: var(--card-title-color);
    }

    .date {
        opacity: 0.75;
    }

    .tags {
        height: 24px;
    }

    .tag {
        border-radius: 50%;
        height: 24px;
        width: 24px;
        margin-right: 1rem;
    }

    @media only screen and (max-width: 480px) {
        .root {
            justify-content: center;
        }
        .image {
            max-height: 100px;
        }
        .banner {
            font-size: 90%;
        }
    }
    a {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    time {
        flex: 0 0;
        color: #888;
    }
    a:visited {
        color: #8e32dc;
    }
    .image {
        max-width: 420px;
        object-fit: contain;
        display: block;
        margin: 0 auto;
    }
</style>
