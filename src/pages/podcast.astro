---
import { Image } from "astro:assets";
import Layout from "../layouts/Page.astro";
import PodcastHeroImage from "../assets/images/the-bounding-box.jpg";
---

<Layout
  title="The Bounding Box"
  description="A podcast that discusses geo development, web development, and everything in between."
  pubDate={new Date("June 30 2023")}
>
  <div class="image-container">
    <Image
      src={PodcastHeroImage}
      alt="The Bounding Box Podcast"
      width={400}
      height={400}
      loading="lazy"
    />
  </div>
  <iframe
    title="The Bounding Box"
    allowtransparency="true"
    height="315"
    width="100%"
    style="border: none; min-width: min(100%, 430px);"
    scrolling="no"
    data-name="pb-iframe-player"
    src="https://www.podbean.com/player-v2/?i=s8844-d24fd9-pbblog-playlist&share=1&download=1&rtl=0&fonts=Arial&skin=1&font-color=auto&order=episodic&limit=10&filter=all&ss=a713390a017602015775e868a2cf26b0&btn-skin=7&size=315"
    allowfullscreen=""></iframe>

  Listen now on your favorite platform:

  <div class="link-container">
    <ul>
      <li>
        <a
          href="https://www.youtube.com/playlist?list=PLe8asVJTMocgV0OiI9UuWh0dZIqYgDTjE"
          title="The Bounding Box Podcast on YouTube"
          target="_blank"
          rel="nofollow noopener"
        >
          YouTube
        </a>
      </li>
      <li>
        <a
          href="https://theboundingbox.podbean.com/"
          title="The Bounding Box Podcast on Podbean"
          target="_blank"
          rel="nofollow noopener"
        >
          Podbean
        </a>
      </li>
      <li>
        <a
          href="https://open.spotify.com/show/3XZiYYkX6BJH6qpmwSWUaH"
          title="The Bounding Box Podcast on Spotify"
          target="_blank"
          rel="nofollow noopener"
        >
          Spotify
        </a>
      </li>
      <li>
        <a
          href="https://podcasts.apple.com/us/podcast/the-bounding-box/id1611985081"
          title="The Bounding Box Podcast on Apple Podcasts"
          target="_blank"
          rel="nofollow noopener"
        >
          Apple Podcasts
        </a>
      </li>
    </ul>
  </div>

  <div style="margin-top:10px;">
    Merch now available! <a
      href="https://the-bounding-box.printify.me/"
      title="The Bounding Box Store">The Bounding Box Store</a
    >
  </div>
</Layout>

<style>
  .image-container {
    display: flex;
    justify-content: center;
    margin-bottom: 1em;
  }
  .image-container img {
    border-radius: 12px;
    box-shadow: var(--box-shadow);
  }
</style>
